<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/texgyreheros_bold</item>
    </style>

    <style name="tab_text2" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/freesansbold</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIconTint">@color/colorAccent</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AccentButton">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/texgyreheros_bold</item>
    </style>

    <style name="AccentRoundedButton">
        <item name="android:background">@drawable/rounded_big_corner_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/texgyreheros_bold</item>
    </style>

    <style name="MaterialAccentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/texgyreheros_bold</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetSlideAnim</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="BottomSheetSlideAnim">
        <item name="android:windowEnterAnimation">@anim/swipe_up</item>
        <item name="android:windowExitAnimation">@anim/swipe_down</item>

    </style>

    <style name="MyEditText">
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="TextInputLayout">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_bg</item>
    </style>

    <style name="BagSummaryTopBtn">
        <item name="fontFamily">@font/texgyreheros_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="LightGrayText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorLightGray</item>
        <item name="fontFamily">@font/freesans</item>
    </style>

    <style name="BlackBoldText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="fontFamily">@font/freesansbold</item>
    </style>

    <style name="BlackHeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="fontFamily">@font/freesansbold</item>
    </style>

    <style name="BlackRegularText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="fontFamily">@font/freesans</item>
    </style>

    <style name="RoundedBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheetDialogStyle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetSlideAnim</item>
    </style>


    <style name="RoundedBottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet</item>

    </style>

    <style name="TextViewHeader">
        <item name="fontFamily">@font/freesansbold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorBlack</item>

    </style>

    <style name="OutlinedEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/textColorBlack</item>
        <item name="colorAccent">@color/textColorBlack</item>
    </style>

    <style name="OutlinedEditTextTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
</resources>
